<h1>Cities Details</h1>
<table>
  <tr>
    <th>City</th>
    <th></th>
  </tr>

    <% @cities.each do |city| %>
    <tr>
      <td><%= city.name %></td>
      <td><%= link_to 'Show', city_path(city) %></td>
      <td><%= link_to 'Edit', edit_city_path(city) %></td>
      <td><%= link_to 'delete', city_path(city),
            method: :delete,
            data: {confirm: "Are you sure ?"}%></td>
    </tr>
    <% end %>

</table>
