
<div style="margin: 10px;">
  <h1>Course Details List</h1>
  <%= link_to ' New', new_course_path(@course), class: 'btn btn-info fa fa-plus-circle' %>

  <%#= link_to 'New', new_student_path(@student),{:remote => true, 'data-toggle' =>  "modal", 'data-target' => '#popup_modal', class: 'btn btn-info fa fa-plus-square-o'} %><br><br>
</div>
<table class="table table-striped text-center col-md-6">
  <tr>
    <th>Course</th>
    <th>Student</th>
    <th  colspan="3">Action</th>
  </tr>

    <% @courses.each do |course| %>
    <tr>
      <td><%= course.name %></td>
      <td><%= course.students.map {|s| s.name}.join('') %></td>
      <td><%= link_to ' Show', course_path(course),class: 'btn btn-info fa fa-info-circle' %></td>
      <td><%= link_to ' Edit', edit_course_path(course),class: 'btn btn-info fa fa-pencil-square-o' %></td>
      <td><%= link_to ' delete', course_path(course),
            method: :delete,
            data: {confirm: "Are you sure ?"}, class: 'btn btn-info fa fa-trash-o'%></td>
    </tr>
    <% end %>

</table>
