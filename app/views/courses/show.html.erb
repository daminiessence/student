<div style="margin:15px;" >

  <br><h1>Courses Details</h1>
  <table class="col-md-6 table table-striped table-bordered">
    <tr>
      <td><strong>Name </strong></td>
      <td><%= @course.name%></td>
    </tr>
    <tr>
    	<td><strong>Student Name:</strong></td>
    	<td><%= @course.students.map {|s| s.name}.join('') %></td>
    </tr>
  </table>
  <%= link_to 'Back', courses_path,style: 'color: white;', class:'fa fa-arrow-left btn btn-dark'%>
  <%= link_to ' Edit', edit_course_path(@course), style: 'color: white;', class: 'fa fa-pencil-square-o btn btn-dark' %>

</div>
